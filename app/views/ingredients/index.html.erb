<div class="text-center ingredients_list">
<ul class="list-unstyled">
  <% @ingredients.each do |ingredient| %>
      <li>
        <%= ingredient.name %> -
        <%= link_to '<i class="fa fa-pencil"></i>'.html_safe, edit_ingredient_path(ingredient) %>
